<div class="row">
  {{#each notes}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          {{!-- Alinear linea de titulo con icono de editar: d-flex justify-content-between align-items-center --}}
          <h5 class="card-title d-flex justify-content-between align-items-center">{{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a></h5>
          <p>{{description}}</p>
          <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            
            <button class="btn btn-danger btn-block btn-sm" type="submit">
              Borrar
            </button>
          </form>
        </div>
      </div>
    </div>
  {{else}}
    <div class="card mx-auto">
      <div class="card-body">
        <h4 class="text-center">Â¡Hola {{user.name}}!</h4>
        <p class="lead">Aun no hay notas</p>
        <a href="/notes/add" class="btn btn-success btn-block">Crear nueva nota</a>
      </div>
    </div>
  {{/each}}
</div>