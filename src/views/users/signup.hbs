<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">Registrate</div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          {{!-- nombre --}}
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              name="name"
              placeholder="Nombre"
              value="{{name}}"
            />
          </div>
          {{!-- correo --}}
          <div class="form-group">
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Correo"
              value="{{email}}"
            />
          </div>
          {{!-- contraseña --}}
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Contraseña"
              value="{{password}}"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              name="confirm_password"
              placeholder="Confirmar contraseña"
            />
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Registrarse</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>